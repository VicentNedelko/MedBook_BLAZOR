@using Microsoft.AspNetCore.Components


<div class="container-fluid">
    <form class="d-flex" role="search" @onclick="@(async () => await OnEnterSearch.InvokeAsync(SearchValue))" @formname="SearchIndicator">
        <InputText class="form-control me-2" @bind-value="SearchValue" type="search" placeholder="Search indicator" aria-label="Search" />
        <button class="btn btn-outline-success" type="submit">Search</button>
    </form>
</div>

@code {
    private string? SearchValue { get; set; } = default;

    [Parameter]
    public EventCallback<string> OnEnterSearch { get; set; }
}